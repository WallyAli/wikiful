
<h1>Welcome to Wikiful</h1>
<h3>Here are some of the most recent articles:</h3>

<div>
<ol>
<% @recent_articles.each do |article| %>
	<li>
		<p>
			Published on <%= article.created_at.strftime('%B %d, %Y') %> ----
			Category: <% article.categories.each do |category| %>
				<%= category.name %>
			<% end %>
		</p>
		<h5><%= link_to article.title, article %></h5>
		
		<p><%= truncate(article.content, length: 100) %></p>
	</li>

<% end %>
</ol>
</div>

